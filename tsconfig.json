{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["dom", "es2016", "esnext.asynciterable"],
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/*"],
	"exclude": [
		"node_modules"
]
}